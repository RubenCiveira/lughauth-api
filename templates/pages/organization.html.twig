{% extends 'base.html.twig' %}

{% block title %}Functions{% endblock %}

{% block page_title %}Functions{% endblock %}

{% block content %}
<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-semibold">Functions</h2>
    
    {% include 'components/button.html.twig' with {
        label: 'Create function',
        variant: 'primary',
        icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" /></svg>'
    } %}
</div>

{% if functions is defined and functions|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% for function in functions %}
            <!-- Function card here -->
        {% endfor %}
    </div>
    
    {% include 'components/pagination.html.twig' with {
        entity_name: 'Functions',
        per_page: 6,
        current_page: 1,
        total: functions|length,
        total_pages: 1
    } %}
{% else %}
    <div class="bg-white border rounded-lg shadow-sm overflow-hidden p-8">
        <div class="flex flex-col items-center justify-center py-12">
            <!-- Empty state illustration -->
            <div class="w-64 h-64 mb-8">
                <img src="{{ asset('images/empty-functions.svg') }}" alt="No functions" class="w-full h-full">
            </div>
            
            <h3 class="text-xl font-medium mb-2">Create a function to get started.</h3>
            <p class="text-gray-500 mb-6">Need a hand? Learn more in our documentation.</p>
            
            <div class="flex space-x-4">
                <a href="#" class="px-4 py-2 border rounded-md text-sm">Documentation</a>
                {% include 'components/button.html.twig' with {
                    label: 'Create function',
                    variant: 'primary'
                } %}
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
