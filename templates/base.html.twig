<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %}</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: '#d63384',
                            50: '#fdf2f8',
                            100: '#fce7f3',
                            200: '#fbcfe8',
                            300: '#f9a8d4',
                            400: '#f472b6',
                            500: '#d63384',
                            600: '#be185d',
                            700: '#9d174d',
                            800: '#831843',
                            900: '#701a45',
                        }
                    }
                }
            }
        }
    </script>
    
    <!-- Inter font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        {% if selectedOrganization %}
        {% include 'components/sidebar.html.twig' %}
        {% endif %}

        <!-- Main Content -->
        <div class="flex flex-col flex-1 overflow-hidden">
            <!-- Top Navigation -->
            {% include 'components/topnav.html.twig' %}

            <!-- Page Content -->
            <main class="flex-1 overflow-y-auto p-4">
                {% block content %}{% endblock %}
            </main>

            <!-- Footer -->
            <footer class="border-t py-4 px-6 text-sm text-gray-500">
                <div class="flex justify-between items-center">
                    <div>© {{ "now"|date("Y") }} {{ app_name|default('Mi Aplicación') }}. Todos los derechos reservados.</div>
                    <div class="flex space-x-4">
                        <a href="#" class="hover:text-gray-700">Versión {{ app_version|default('1.0.0') }}</a>
                        <a href="#" class="hover:text-gray-700">Docs</a>
                        <a href="#" class="hover:text-gray-700">Terms</a>
                        <a href="#" class="hover:text-gray-700">Privacy</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    {% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Sidebar elements
        const sidebarMobile = document.getElementById('sidebar-mobile');
        const sidebarDesktop = document.getElementById('sidebar-desktop');
        const sidebarOverlay = document.getElementById('sidebar-overlay');
        const openSidebarButton = document.getElementById('open-sidebar');
        const closeSidebarButton = document.getElementById('close-sidebar');
        
        // Función para abrir el sidebar en móvil
        function openSidebar() {
            sidebarMobile.classList.remove('hidden', '-translate-x-full');
            sidebarOverlay.classList.remove('hidden');
            document.body.classList.add('overflow-hidden', 'md:overflow-auto'); // Prevenir scroll en el body
        }
        
        // Función para cerrar el sidebar en móvil
        function closeSidebar() {
            sidebarMobile.classList.add('-translate-x-full');
            setTimeout(() => {
                if (sidebarMobile.classList.contains('-translate-x-full')) {
                    sidebarMobile.classList.add('hidden');
                    sidebarOverlay.classList.add('hidden');
                    document.body.classList.remove('overflow-hidden', 'md:overflow-auto');
                }
            }, 300); // Esperar a que termine la transición
        }
        
        // Evento para abrir el sidebar
        if (openSidebarButton) {
            openSidebarButton.addEventListener('click', openSidebar);
        }
        
        // Evento para cerrar el sidebar
        if (closeSidebarButton) {
            closeSidebarButton.addEventListener('click', closeSidebar);
        }
        
        // Cerrar sidebar al hacer clic en el overlay
        if (sidebarOverlay) {
            sidebarOverlay.addEventListener('click', closeSidebar);
        }
        
        // Cerrar sidebar al cambiar el tamaño de la ventana a desktop
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 768) { // 768px es el breakpoint md de Tailwind
                if (sidebarMobile && !sidebarMobile.classList.contains('hidden')) {
                    sidebarMobile.classList.add('-translate-x-full', 'hidden');
                    sidebarOverlay.classList.add('hidden');
                    document.body.classList.remove('overflow-hidden');
                }
            }
        });
        
        // Toggle dropdowns
        const dropdownTriggers = document.querySelectorAll("[data-dropdown-trigger]");
        dropdownTriggers.forEach((trigger) => {
            trigger.addEventListener("click", function(e) {
                e.stopPropagation();
                const targetId = this.getAttribute("data-dropdown-target");
                const target = document.getElementById(targetId);

                // Close all other dropdowns
                document.querySelectorAll("[data-dropdown]").forEach((dropdown) => {
                    if (dropdown.id !== targetId) {
                        dropdown.classList.add("hidden");
                    }
                });

                // Toggle current dropdown
                target.classList.toggle("hidden");
            });
        });

        // Close dropdowns when clicking outside
        document.addEventListener("click", () => {
            document.querySelectorAll("[data-dropdown]").forEach((dropdown) => {
                dropdown.classList.add("hidden");
            });
        });

        // Prevent dropdown content clicks from closing the dropdown
        document.querySelectorAll("[data-dropdown]").forEach((dropdown) => {
            dropdown.addEventListener("click", (e) => {
                e.stopPropagation();
            });
        });
        
        // Modal elements
        const modalOverlay = document.getElementById('modal-overlay');
        if (modalOverlay) {
            const modals = document.querySelectorAll('#modal-overlay > div[id$="-modal"]');
            
            // Botones para abrir modales
            const modalTriggers = document.querySelectorAll('[data-action="open-modal"]');
            
            // Función para abrir un modal específico
            function openModal(modalId) {
                // Ocultar todos los modales primero
                modals.forEach(modal => {
                    modal.classList.add('hidden');
                });
                
                // Mostrar el modal solicitado
                const targetModal = document.getElementById(modalId);
                if (targetModal) {
                    targetModal.classList.remove('hidden');
                    modalOverlay.classList.remove('hidden');
                }
            }
            
            // Función para cerrar todos los modales
            function closeModals() {
                modalOverlay.classList.add('hidden');
                modals.forEach(modal => {
                    modal.classList.add('hidden');
                });
            }
            
            // Cerrar modal al hacer clic fuera
            modalOverlay.addEventListener('click', function(event) {
                if (event.target === modalOverlay) {
                    closeModals();
                }
            });
            
            // Cerrar modal con tecla Escape
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape' && !modalOverlay.classList.contains('hidden')) {
                    closeModals();
                }
            });
            
            // Añadir evento de clic a todos los botones para abrir modales
            modalTriggers.forEach(button => {
                button.addEventListener('click', function() {
                    const targetModal = this.getAttribute('data-target');
                    openModal(targetModal);
                });
            });
            
            // Añadir evento de clic a todos los botones para cerrar modales
            const closeButtons = document.querySelectorAll('.modal-close');
            closeButtons.forEach(button => {
                button.addEventListener('click', closeModals);
            });
        }
    });
</script>
    {% endblock %}
    <img src="{{ path('migration_db') }}" />
</body>
</html>
