<button 
    type="{{ type|default('button') }}" 
    class="inline-flex items-center px-4 py-2 border rounded-md shadow-sm text-sm font-medium 
    {% if variant == 'primary' %}
        bg-primary text-white hover:bg-primary-600 border-primary
    {% elseif variant == 'outline' %}
        bg-white text-gray-700 hover:bg-gray-50 border-gray-300
    {% elseif variant == 'ghost' %}
        bg-transparent text-gray-700 hover:bg-gray-50 border-transparent
    {% else %}
        bg-white text-gray-700 hover:bg-gray-50 border-gray-300
    {% endif %}
    {{ class|default('') }}"
    {% if disabled %}disabled{% endif %}
    {% for attr, value in attributes|default({}) %}
        {{ attr }}="{{ value }}"
    {% endfor %}
>
    {% if icon is defined %}
    <span class="mr-2">{{ icon|raw }}</span>
    {% endif %}
    {{ label|default('Button') }}
</button>
