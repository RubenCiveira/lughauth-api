<div class="bg-white border rounded-lg shadow-sm overflow-hidden {% block card_class %}{% endblock %}">
    {% if card_header is defined %}
    <div class="px-4 py-3 border-b">
        <h3 class="font-medium">{{ card_header }}</h3>
    </div>
    {% endif %}
    
    <div class="p-4">
        {% block card_content %}{% endblock %}
    </div>
    
    {% if card_footer is defined %}
    <div class="px-4 py-3 bg-gray-50 border-t">
        {{ card_footer|raw }}
    </div>
    {% endif %}
</div>
