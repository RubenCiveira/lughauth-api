<header class="bg-white border-b">
    <div class="flex justify-between items-center px-6 py-3">
        <div class="flex items-center">
            <!-- Mobile menu button -->
            {% if selectedOrganization %}
            <button id="open-sidebar" class="md:hidden mr-4 text-gray-500 hover:text-gray-700 mobile-menu-button">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <span class="sr-only">Abrir menú</span>
            </button>
            {% endif %}
            
            <!-- Page title (can be overridden) -->
            <h1 class="text-xl font-semibold">{% block page_title %}Dashboard{% endblock %}</h1>
        </div>
        
        <div class="flex items-center space-x-4">
            <!-- Search 
            <button class="text-gray-500 hover:text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
            </button>
            -->
            
            <!-- Feedback 
            <a href="#" class="text-gray-500 hover:text-gray-700 text-sm">Feedback</a>
            -->
            
            <!-- User menu -->
            <div class="relative">
                <button class="flex items-center space-x-2" data-dropdown-trigger data-dropdown-target="user-dropdown">
                    <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-gray-700">
                        {% if user.avatar %}
                            <img src="{{ user.avatar }}" alt="{{ user.name }}" class="w-8 h-8 rounded-full">
                        {% else %}
                            {{ user.initials|default('RC') }}
                        {% endif %}
                    </div>
                </button>
                
                <!-- User dropdown (hidden by default) -->
                <div id="user-dropdown" data-dropdown class="hidden absolute right-0 mt-2 w-48 bg-white border rounded-md shadow-lg z-10">
                    <div class="p-3 border-b">
                        <div class="font-medium">{{ user.name|default('Usuario') }}</div>
                        <div class="text-sm text-gray-500">{{ user.email|default('usuario@ejemplo.com') }}</div>
                    </div>
                    <ul>
                        <li><a href="#" class="block px-4 py-2 text-sm hover:bg-gray-100">Perfil</a></li>
                        <li><a href="#" class="block px-4 py-2 text-sm hover:bg-gray-100">Configuración</a></li>
                        <li><a href="#" class="block px-4 py-2 text-sm hover:bg-gray-100 border-t">Cerrar sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
