                    {% set menu_items = [
                        {name: 'Overview', icon: 'chart-bar', route: 'dashboard', active: app.request.get('_route') == 'dashboard'},
                        {name: 'Projects', icon: 'folder', route: 'projects', active: app.request.get('_route') starts with 'projects'},
                        {name: 'Functions', icon: 'bolt', route: 'functions', active: app.request.get('_route') starts with 'functions'},
                        {name: 'Auth', icon: 'user-group', route: 'auth', active: app.request.get('_route') starts with 'auth'},
                        {name: 'Databases', icon: 'database', route: 'databases', active: app.request.get('_route') starts with 'databases'},
                        {name: 'Messaging', icon: 'chat', route: 'messaging', active: app.request.get('_route') starts with 'messaging'},
                        {name: 'Storage', icon: 'folder', route: 'storage', active: app.request.get('_route') starts with 'storage'},
                        {name: 'Members', icon: 'users', route: 'members', active: app.request.get('_route') starts with 'members'},
                        {name: 'Settings', icon: 'cog', route: 'settings', active: app.request.get('_route') starts with 'settings'}
